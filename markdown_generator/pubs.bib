@article{caoBandGapOpening2016,
  title = {Band {{Gap Opening}} of {{Graphene}} by {{Forming Heterojunctions}} with the {{2D Carbonitrides Nitrogenated Holey Graphene}}, g-{{C3N4}}, and g-{{CN}}: {{Electric Field Effect}}},
  shorttitle = {Band {{Gap Opening}} of {{Graphene}} by {{Forming Heterojunctions}} with the {{2D Carbonitrides Nitrogenated Holey Graphene}}, g-{{C3N4}}, and g-{{CN}}},
  author = {Cao, Xiong and Shi, Jun-jie and Zhang, Min and Jiang, Xin-he and Zhong, Hong-xia and Huang, Pu and Ding, Yi-min and Wu, Meng},
  year = {2016},
  month = may,
  journal = {The Journal of Physical Chemistry C},
  volume = {120},
  number = {20},
  pages = {11299--11305},
  publisher = {American Chemical Society},
  issn = {1932-7447},
  doi = {10.1021/acs.jpcc.6b03308},
  urldate = {2025-08-28},
  abstract = {To solve a challenging issue, i.e., the gap opening of graphene, we designed several heterojunctions of graphene and other two-dimensional carbonitride materials with natural holes in their monolayers, namely, nitrogenated holey graphene (NHG), g-C3N4, and g-CN, to destroy graphene's sublattice symmetry and we investigated their electronic structures by first-principles calculations, in which the external electric field effect was also considered. We found that the heterojunctions, except for that with g-CN, have a direct band gap and that their important band edge states are dominated mainly by their graphene layer. The electric field can open band gaps and reduce the effective mass of electron and hole. The graphene/NHG has a large band gap (186.6 meV) and electron effective mass, which can be reduced from 1.31 to 0.014 m0 by applying an electric field of 0.4 V/{\AA}. The NHG/graphene/NHG has the largest band gap of 250.7 meV among all of the graphene-based heterojunctions. The band gap of g-C3N4/graphene/g-C3N4 can be enlarged from 76.8 to 85.5 meV by applying a perpendicular electric field (0.6 V/{\AA}). Interestingly, the external electric field can also convert the indirect band gap of graphene/g-CN into a direct one of 83.3 meV. Our results are useful for fast graphene-based nano-optoelectronic devices.},
  keywords = {/unread}
}

@article{dingImprovementNtypeConductivity2016,
  title = {Improvement of N-Type Conductivity in Hexagonal Boron Nitride Monolayers by Doping, Strain and Adsorption},
