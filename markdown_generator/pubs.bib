  keywords = {/unread},
  file = {D:\Users\jiang\Zotero\storage\2WNB7BGI\Jiang2016_JPhysDApplPhys49_095104_Breakthrough_of_the_p-type_doping_bottleneck_in_ZnO_by_inserting_an_ultrathin_Zn.pdf}
